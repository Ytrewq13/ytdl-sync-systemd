{
  "settings": {
    "__comment": "The settings object must include the arguments variable. Nothing else is required.",
    "rootdirs": [
        "/media/video/youtube-archive",
        "/media/video/other"
    ],
    "arguments": [
        "--write-info-json",
        "--ignore-errors",
        "--ignore-config",
        "--no-cache-dir",
        "--quiet",
        "--continue",
        "--no-progress",
        "--no-call-home",
        "--write-sub",
        "--sub-format srt/ass/best",
        "--embed-subs",
        "--format best[height<=1440]",
        "--limit-rate 1M"
    ]
  }
}
